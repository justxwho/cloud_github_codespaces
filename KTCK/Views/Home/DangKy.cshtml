
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
@model KTCK.Models.KhachHang
<h2 class="text-center text-success mt-3" style="color: #3EB5C4">ĐĂNG KÝ TÀI KHOẢN</h2>

<div class="container mt-4" style="max-width: 500px;">
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <form action="" method="post">
        <div class="form-group mb-3">
            <label>Họ tên</label>
            <input type="text" name="TenKH" class="form-control" placeholder="Nhập họ tên" required />
        </div>

        <div class="form-group mb-3">
            <label>Điện thoại</label>
            <input type="text" name="DienThoai" class="form-control" placeholder="Số điện thoại" />
        </div>

        <div class="form-group mb-3">
            <label>Địa chỉ</label>
            <input type="text" name="DiaChi" class="form-control" placeholder="Địa chỉ" />
        </div>

        <div class="form-group mb-3">
            <label>Mật khẩu</label>
            <input type="password" name="MatKhau" class="form-control" required />
        </div>

        <div class="form-group mb-3">
            <label>Nhập lại mật khẩu</label>
            <input type="password" name="ConfirmPass" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-success w-100">Đăng ký</button>
    </form>
</div>

