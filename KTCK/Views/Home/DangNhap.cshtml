
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}


<div class="container mt-5" style="max-width: 450px;">
    <h2 class="text-center text-primary mb-4" style="color:#3EB5C4">ĐĂNG NHẬP</h2>

    @if (ViewBag.ThongBao != null)
    {
        <div class="alert alert-danger text-center">
            @ViewBag.ThongBao
        </div>
    }

    <form method="post" action="/Home/DangNhap">
        <div class="form-group mb-3">
            <label for="txtName">Tài khoản</label>
            <input type="text" class="form-control" id="txtName" name="txtName" placeholder="Nhập tài khoản..." required />
        </div>

        <div class="form-group mb-3">
            <label for="txtPass">Mật khẩu</label>
            <input type="password" class="form-control" id="txtPass" name="txtPass" placeholder="Nhập mật khẩu..." required />
        </div>

        <button type="submit" class="btn btn-success w-100 mt-2">Đăng nhập</button>

        <div class="text-center mt-3">
            <span>Bạn chưa có tài khoản?</span>
            <a href="@Url.Action("DangKy","Home")" class="text-primary"><b>Đăng ký ngay</b></a>
        </div>
    </form>
</div>


