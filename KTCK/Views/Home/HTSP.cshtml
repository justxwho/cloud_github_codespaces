@{
    ViewBag.Title = "HTSP";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
@using KTCK.Models;
@model List<NongSan>

<style>
    /* ======= CARD SẢN PHẨM ======= */
    .product-card {
        display: flex;
        flex-direction: column;
        height: 430px; /* Chiều cao đồng nhất */
        border: 1px solid #eee;
        border-radius: 10px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 10px rgba(0,0,0,0.15);
        }

    /* ======= HÌNH ẢNH ======= */
    .img-wrapper {
        height: 220px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #fff;
        border-bottom: 1px solid #f0f0f0;
        overflow: hidden;
        padding: 10px;
    }

        .img-wrapper img {
            width: 100%;
            height: 100%;
            object-fit: contain;
        }

    /* ======= TIÊU ĐỀ ======= */
    .card-title {
        font-size: 17px;
        font-weight: 600;
        min-height: 48px;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        margin-top: 10px;
    }

    /* ======= GIÁ ======= */
    .card-text {
        font-size: 15px;
        color: #555;
        font-weight: 500;
    }
</style>

<h2 class="text-center my-4">Thông tin sản phẩm</h2>

<!-- 4 sản phẩm / hàng -->
<div class="container">
    <div class="row">
        @foreach (var sp in Model)
        {
            <div class="col-lg-3 col-md-3 col-sm-6 mb-4 d-flex">
                <div class="card product-card text-center flex-fill">
                    <div class="img-wrapper">
                        <img src="~/Content/Hinhanh/Hinhanh/@sp.HinhDaiDien"alt="@sp.HinhDaiDien" />
                    </div>
                   
                    <div class="card-body d-flex flex-column justify-content-between">
                        <h5 class="card-title">@sp.TenSP</h5>
                        <p class="card-text mt-auto">Giá: @String.Format("{0:N0} VNĐ", sp.DonGia)</p>
                        <div class="d-flex justify-content-between align-items-center px-3 p-2">
                            <a href="@Url.Action("ChiTiet", "Home", new { id = sp.idSP.Trim() })" class="btn btn-primary btn-sm">
                                Xem chi tiết
                            </a>
                            <a href="@Url.Action("ThemGioHang","Home", new { id = sp.idSP.Trim() })"
                               class="btn btn-success btn-sm">
                                Mua hàng
                            </a>

                        </div>
                       
                    </div>
                </div>
            </div>
        }
    </div>
</div>
