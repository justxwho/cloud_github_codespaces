
@{
    ViewBag.Title = "SPTheoLoai";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

@model List<KTCK.Models.NongSan>

<h2 class="text-center mt-3">Danh sách sản phẩm</h2>

<div class="row">
    @foreach (var s in Model)
    {
        <div class="col-3">
            <div class="card p-2 m-2">
                <img src="~/Content/Hinhanh/Hinhanh/@s.HinhDaiDien" class="card-img-top" />
                <h5 class="text-center mt-2">@s.TenSP</h5>
                <p class="text-center">@s.DonGia.ToString("N0") VNĐ</p>
                <div class="d-flex justify-content-between align-items-center px-3 p-2">
                    <a href="@Url.Action("ChiTiet", "Home", new { id = s.idSP.Trim() })" class="btn btn-primary btn-sm">
                        Xem chi tiết
                    </a>
                    <a href="@Url.Action("ThemGioHang","Home", new { id = s.idSP.Trim() })"
                       class="btn btn-success btn-sm">
                        Mua hàng
                    </a>

                </div>

            </div>
        </div>
    }
</div>

