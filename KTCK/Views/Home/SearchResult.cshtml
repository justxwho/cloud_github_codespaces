@{
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

@model List<KTCK.Models.NongSan>

<style>
    .img-wrapper {
        height: 220px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #fff;
        border-bottom: 1px solid #f0f0f0;
        overflow: hidden;
        padding: 10px;
    }

        .img-wrapper img {
            width: 100%;
            height: 100%;
            object-fit: contain;
        }
</style>
<h3 class="text-center fw-bold mt-4">Kết quả tìm kiếm</h3>
<hr />

@if (!Model.Any())
{
    <h5 class="text-danger text-center mt-3">Không có sản phẩm nào phù hợp.</h5>
}
else
{
<div class="row mt-3">
    @foreach (var sp in Model)
    {
        <div class="col-lg-3 col-md-3 col-sm-6 mb-4 d-flex">
            <div class="card product-card text-center flex-fill">
                <div class="img-wrapper">
                    <img src="~/Content/Hinhanh/Hinhanh/@sp.HinhDaiDien" alt="@sp.HinhDaiDien" />
                </div>

                <div class="card-body d-flex flex-column justify-content-between">
                    <h5 class="card-title">@sp.TenSP</h5>
                    <p class="card-text mt-auto">Giá: @String.Format("{0:N0} VNĐ", sp.DonGia)</p>
                    <div class="d-flex justify-content-between align-items-center px-3 p-2">
                        <a href="@Url.Action("ChiTiet", "Home", new { id = sp.idSP })" class="btn btn-primary btn-sm">
                            Xem chi tiết
                        </a>
                        <a href="@Url.Action("ThemGioHang","Home", new { id = sp.idSP.Trim() })"
                           class="btn btn-success btn-sm">
                            Mua hàng
                        </a>

                    </div>
                </div>
            </div>
        </div>
    }
</div>
}

