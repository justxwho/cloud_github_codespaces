@using KTCK.Models
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap-5/bootstrap-5.3.8-dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .topbar {
            background: linear-gradient(to bottom, #2B4C7E, #3EB5C4);
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 10px 30px;
            flex-wrap: wrap;
        }

        /* Logo */
        /* .topbar img {
             height: 70px;
             width: 200px;
             margin-right: 25px;
        }*/

        .nav-link {
            color: white !important;
            font-weight: 500;
            transition: color 0.3s;
        }

            .nav-link:hover {
                color: #ffc107 !important;
            }




        .cart-link {
            font-size: 18px;
            color: white !important;
            text-decoration: none;
            font-weight: 600;
        }

            .cart-link:hover {
                color: #ffc107 !important;
            }

        .cart-badge {
            background-color: red;
            color: white;
            font-size: 13px;
            font-weight: bold;
            border-radius: 50%;
            padding: 3px 7px;
            position: absolute;
            top: -8px;
            right: -12px;
        }

        .search-box {
            display: flex;
            align-items: center;
            background: white;
            border-radius: 6px;
            overflow: hidden;
            margin-left: 30px;
            box-shadow: 0 1px 4px rgba(0,0,0,0.2);
        }

            .search-box input {
                border: none;
                outline: none;
                padding: 8px 12px;
                width: 250px;
                font-size: 15px;
            }

            .search-box button {
                background-color: #007bff;
                color: white;
                border: none;
                padding: 8px 16px;
                font-weight: 600;
                cursor: pointer;
                transition: 0.3s;
            }

                .search-box button:hover {
                    background-color: #0056b3;
                }

        /* Footer */
        .footer {
            background-color: #ffc107;
            text-align: center;
            padding: 10px;
            font-weight: 500;
            margin-top: 20px;
        }

        h1.bg-success {
            border-radius: 6px;
        }

        html, body {
            height: 100%;
            margin: 0;
        }

        .container-fluid {
            display: flex;
            flex-direction: column;
            min-height: 100vh; /* Toàn trang cao bằng chiều cao màn hình */
        }

        .content {
            flex: 1; /* Tự co giãn để đẩy footer xuống đáy */
        }

        /* Footer */
        .footer {
            background-color: #3EB5C4;
            text-align: center;
            padding: 10px;
            font-weight: 500;
            margin-top: 0; /* Xóa margin thừa để sát đáy */
        }


    </style>
    

</head>
<body>
    <header class="d-flex justify-content-between align-items-center px-3">
        <img src="~/Content/Hinhanh/Hinhanh/img_logo.png" />
        <a href="@Url.Action("XemGioHang","Home")" class="cart-link">
            <img style="width:150%" src="~/Content/Hinhanh/Hinhanh/img_giohang.jpg" />
            @if (Session["GioHang"] != null)
            {
                var gio = Session["GioHang"] as List<KTCK.Models.GioHang>;
                if (gio.Count > 0)
                {
                    <span class="cart-badge">@gio.Count</span>
                }
            }
        </a>

    </header>
    <div class="container-fluid d-flex flex-column min-vh-100">

        <div class="row">
            <div class="col-12 topbar">

                <!-- MENU BÊN TRÁI -->
                <ul class="nav ms-3">
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("HTSP","Home")">Trang chủ</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("SearchForm","Home")">Tìm kiếm</a></li>

                    @if (Session["UserName"] != null)
                    {
                        <li class="nav-item">
                            <span class="nav-link text-white">Xin chào, <b>@Session["UserName"]</b></span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-danger fw-bold" href="@Url.Action("DangXuat","Home")">Đăng xuất</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("DangNhap","Home")">Đăng nhập</a></li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("DangKy","Home")">Đăng ký</a></li>
                    }
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                            Rau củ sạch
                        </a>
                        @Html.Action("MenuLoai", "Home", new { madm = 1 })
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                            Thịt tươi - sạch
                        </a>
                        @Html.Action("MenuLoai", "Home", new { madm = 2 })
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                            Trái cây tươi theo mùa
                        </a>
                        @Html.Action("MenuLoai", "Home", new { madm = 3 })
                    </li>


                </ul>

            </div>
        </div>


        <div class="row mt-3">
            <div class="col-12">
                <div class="mt-3">
                    @RenderBody()
                </div>
            </div>
        </div>
        <div class="row mt-auto">
            <div class="col-12 footer">
                Liên hệ: Khoa Công Nghệ Thông Tin - 140 Lê Trọng Tấn, Phường Tây Thạnh, TPHCM
            </div>
        </div>
    </div>


    <script src="~/Content/bootstrap-5/bootstrap-5.3.8-dist/js/bootstrap.bundle.min.js"></script>


</body>
</html>
