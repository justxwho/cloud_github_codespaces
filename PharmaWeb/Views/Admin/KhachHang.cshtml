@model IEnumerable<PharmaWeb.Models.KhachHang>

@{
    ViewData["Title"] = "Quản lý khách hàng";
    Layout = "_Layout_Admin";
}

<div class="container-fluid">
    <h2 class="mb-4">
        <i class="fas fa-users"></i> Quản lý khách hàng
    </h2>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Mã KH</th>
                            <th>Họ tên</th>
                            <th>Điện thoại</th>
                            <th>Email</th>
                            <th>Địa chỉ</th>
                            <th>Tài khoản</th>
                            <th width="130">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var kh in Model)
                    {
                        <tr>
                            <td>@kh.MaKh</td>
                            <td>@kh.HoTen</td>
                            <td>@kh.DienThoai</td>
                            <td>@kh.Email</td>
                            <td>@kh.DiaChi</td>
                            <td>
                                @if (kh.MaTkNavigation != null)
                                {
                                    <div>
                                        <strong>@kh.MaTkNavigation.TenDangNhap</strong><br />
                                        @if (kh.MaTkNavigation.TrangThai == 1)
                                        {
                                            <span class="badge bg-success">Hoạt động</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Đã khóa</span>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted">Chưa có</span>
                                }
                            </td>
                            <td>
                                @if (kh.MaTkNavigation != null)
                                {
                                    <button class="btn btn-sm @(kh.MaTkNavigation.TrangThai == 1 ? "btn-outline-danger" : "btn-outline-success")"
                                            onclick="toggleKhoa(@kh.MaTkNavigation.MaTk)">
                                        @(kh.MaTkNavigation.TrangThai == 1 ? "Khóa" : "Mở khóa")
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
function toggleKhoa(maTk) {
    if (!confirm('Bạn có chắc muốn thay đổi trạng thái tài khoản này?'))
        return;

    $.post('/Admin/ToggleKhoaTaiKhoan', { maTk: maTk }, function (res) {
        if (res.success) {
            location.reload();
        } else {
            alert(res.message || 'Có lỗi xảy ra');
        }
    });
}
</script>
}
